{
  // Color theme
  "workbench.colorTheme": "Ayu Mirage Bordered",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorCustomizations": {
    "editorWhitespace.foreground": "#656565"
  },
  // Editor
  "editor.wordWrap": "on",
  "editor.fontFamily": "Cica, 'FiraCode Nerd Font', Consolas, 'Courier New', monospace",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.useTabStops": false,
  "editor.tabSize": 4,
  "[markdown][latex][bibtex]": {
    "editor.tabSize": 2
  },
  "[html][css][javascript][typescript][coffeescript][json][yaml][vue][jsonc]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
    "editor.formatOnSave": true
  },
  // TOML
  "[toml]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "evenBetterToml.formatter.allowedBlankLines": -1,
  "evenBetterToml.formatter.columnWidth": 120,
  "evenBetterToml.formatter.indentEntries": true,
  "evenBetterToml.formatter.indentString": "  ",
  "evenBetterToml.formatter.indentTables": true,
  // Explorer
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "workbench.tree.indent": 32,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.DS_Store": true,
    "**/._*": true
  },
  // Terminal
  "terminal.integrated.profiles.windows": {
    "pwsh": {
      "path": "C:/Program Files/PowerShell/7/pwsh.exe",
      "icon": "terminal-powershell"
    }
  },
  "terminal.integrated.defaultProfile.windows": "pwsh",
  "terminal.integrated.profiles.osx": {
    "fish": {
      "path": "/opt/homebrew/bin/fish",
      "args": ["-l"],
      "icon": "terminal-bash"
    }
  },
  "terminal.integrated.defaultProfile.osx": "fish",
  "terminal.integrated.fontFamily": "Cica, 'FiraCode Nerd Font', 'MesloLGS NF', monospace",
  "terminal.integrated.tabs.enabled": true,
  // Git
  "git.ignoreMissingGitWarning": true,
  "git.openRepositoryInParentFolders": "never",
  "github.gitAuthentication": false,
  // Debug
  "debug.internalConsoleOptions": "openOnFirstSessionStart",
  "debug.console.closeOnEnd": true,
  "debug.focusWindowOnBreak": true,
  // C/C++
  "[c][cpp][cuda]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnSave": true
  },
  "C_Cpp.clang_format_sortIncludes": false,
  // CMake
  "cmake.configureOnOpen": false,
  "cmake.parallelJobs": 4,
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],
  "[cmake]": {
    "editor.detectIndentation": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  // Python
  "[python]": {
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.formatOnType": false,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    }
  },
  // Jupyter notebook
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "notebook.lineNumbers": "on",
  "jupyter.askForKernelRestart": false,
  // LaTeX
  "[latex][bibtex]": {
    "editor.renderWhitespace": "all",
    "editor.formatOnSave": true
  },
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.view.pdf.zoom": "page-width",
  "latex-workshop.message.badbox.show": "none",
  "latex-workshop.latex.autoBuild.run": "onSave",
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk",
      "tools": ["latexmk"]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-f",
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "%DOC%"
      ]
    }
  ],
  "latex-workshop.formatting.latexindent.path": "latexindent",
  "latex-workshop.formatting.latexindent.args": [
    "-l=%DIR%/localSettings.yaml",
    "-m",
    "-r",
    "-c=%DIR%/",
    "-y=defaultIndent: '%INDENT%'",
    "%TMPFILE%"
  ],
  // Spell checker
  "cSpell.userWords": [
    "anisotropic",
    "backpropagation",
    "bijective",
    "binarization",
    "binarize",
    "bssrdfs",
    "convolutional",
    "convolve",
    "dataset",
    "demosaicing",
    "diagonality",
    "discretization",
    "discretize",
    "discretized",
    "discretizing",
    "downscaled",
    "exitant",
    "gabor",
    "homeomorphic",
    "homography",
    "invertibility",
    "isosurface",
    "lambertian",
    "microfacet",
    "multiview",
    "nonconvex",
    "nonnegativity",
    "parallelizable",
    "perceptron",
    "polyline",
    "polylines",
    "posedness",
    "precompute",
    "pretrained",
    "pretraining",
    "pseudocode",
    "quadrangulation",
    "rasterized",
    "rasterizing",
    "recentered",
    "representability",
    "reprojected",
    "reprojecting",
    "resampled",
    "resampling",
    "softmax",
    "spectralon",
    "stereopsis",
    "stereovision",
    "subproblems",
    "thresholding",
    "unclarities",
    "unclarity",
    "unduplicated",
    "upsampling",
    "voxel",
    "voxels"
  ]
}
